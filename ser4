#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <arpa/inet.h>
#include <openssl/aes.h>

#define PORT 12345
#define BUFFER_SIZE 1024
#define AES_KEY_SIZE 256

// Function to encrypt data using AES
void encrypt_aes(const unsigned char *plaintext, int plaintext_len, unsigned char *ciphertext, unsigned char *aes_key) {
    AES_KEY key;
    AES_set_encrypt_key(aes_key, AES_KEY_SIZE, &key);
    AES_encrypt(plaintext, ciphertext, &key);
}

int main() {
    int server_fd, new_socket;
    struct sockaddr_in address;
    int opt = 1;
    int addrlen = sizeof(address);
    unsigned char aes_key[AES_KEY_SIZE / 8]; // 256-bit AES key

    // Generate a random AES key
    RAND_bytes(aes_key, sizeof(aes_key));

    // Create a socket
    if ((server_fd = socket(AF_INET, SOCK_STREAM, 0)) == 0) {
        perror("socket creation failed");
        exit(EXIT_FAILURE);
    }

    // Forcefully attach socket to the port
    if (setsockopt(server_fd, SOL_SOCKET, SO_REUSEADDR | SO_REUSEPORT, &opt, sizeof(opt))) {
        perror("setsockopt");
        exit(EXIT_FAILURE);
    }
    address.sin_family = AF_INET;
    address.sin_addr.s_addr = INADDR_ANY;
    address.sin_port = htons(PORT);

    // Bind the socket to the port
    if (bind(server_fd, (struct sockaddr *)&address, sizeof(address))<0) {
        perror("bind failed");
        exit(EXIT_FAILURE);
    }

    // Listen for incoming connections
    if (listen(server_fd, 3) < 0) {
        perror("listen");
        exit(EXIT_FAILURE);
    }

    // Accept incoming connections
    if ((new_socket = accept(server_fd, (struct sockaddr *)&address, (socklen_t*)&addrlen))<0) {
        perror("accept");
        exit(EXIT_FAILURE);
    }

    while (1) {
        unsigned char plaintext[BUFFER_SIZE];
        unsigned char ciphertext[BUFFER_SIZE];
        int bytes_received;

        // Receive data from client
        if ((bytes_received = recv(new_socket, plaintext, BUFFER_SIZE, 0)) < 0) {
            perror("recv failed");
            exit(EXIT_FAILURE);
        }

        // Encrypt the received data
        encrypt_aes(plaintext, bytes_received, ciphertext, aes_key);

        // Send the encrypted data back to the client
        if (send(new_socket, ciphertext, bytes_received, 0) < 0) {
            perror("send failed");
            exit(EXIT_FAILURE);
        }
    }

    // Close the socket
    close(new_socket);
    close(server_fd);

    return 0;
}